<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:finalnoteapp"
             x:Class="finalnoteapp.MainPage"
             BackgroundColor="Orange"
             >
    <StackLayout x:Name="Principal"
                 Orientation="Vertical"  
                 VerticalOptions="CenterAndExpand"
                 Padding="10" >
        <StackLayout x:Name="Modalidad"
                     Orientation="Horizontal"                   
                     HorizontalOptions="CenterAndExpand"
                         Padding="1" >
            <Button x:Name="btndist"
                    FontSize="Small"
                    BackgroundColor="Black"
                    TextColor="White" 
                    Text="Distancia"/>
            <Button 
                x:Name="btnpres"
                BackgroundColor="Black"
                FontSize="Small"
                TextColor="White"
                Text="Presencial"
                /> 
        </StackLayout >
        <StackLayout x:Name="computarycalcular"                    
                     Orientation="Horizontal"                     
                     HorizontalOptions="CenterAndExpand"
                     Padding="1"
                     >
            <Button
                x:Name="btncalculo"
                BackgroundColor="Black"
                TextColor="White" 
                FontSize="Small"
                Text="Calculo" IsEnabled="True"
                />
            <Button 
                x:Name="btnpredecir"
                BackgroundColor="Black"
                TextColor="White"
                 FontSize="Small"
                Text="Predecir" IsEnabled="True"
                />
        </StackLayout>
        <StackLayout x:Name="Notas"
                     Orientation="Horizontal"
                     HorizontalOptions="CenterAndExpand"
                         Padding="5" 
                     >
            
            <Entry Keyboard="Numeric" FontSize="Large" HorizontalTextAlignment="Center" BackgroundColor="Black" TextColor="White" x:Name="nota1" Placeholder="Nota 1" IsEnabled="True"/>
            <Entry Keyboard="Numeric" FontSize="Large" HorizontalTextAlignment="Center" BackgroundColor="Black" TextColor="White" x:Name="nota2" Placeholder="Nota 2" IsEnabled="True"/>
            <Entry Keyboard="Numeric" FontSize="Large" HorizontalTextAlignment="Center" BackgroundColor="Black" TextColor="White" x:Name="nota3" Placeholder="Nota 3" IsEnabled="True"/>

        </StackLayout>

        <Label FontSize="40"
               HorizontalTextAlignment="Center"
               TextColor="Green"               
               x:Name="notadef"
               IsEnabled="False"
               Text="5.0" 
                   Padding="5" 
               />
        <Button 
                x:Name="btncalcular"
                BackgroundColor="Black"
                TextColor="White"
                 FontSize="Small"
                Text="Calcular" IsEnabled="True"
            Padding="5" 
                />
      
        <StackLayout x:Name="btnnewydel"
                     Orientation="Horizontal"                     
                     HorizontalOptions="CenterAndExpand"
                  
                     >
            <Button
                x:Name="btnnew"
                BackgroundColor="Black"
                TextColor="White" 
                 FontSize="Small"
                Text="Nuevo" IsEnabled="True"
                Padding="5" 
                />
            <Button
                x:Name="btnout"
                BackgroundColor="Black"
                 FontSize="Small"
                TextColor="White" 
                Text="Salir" IsEnabled="True"
                Padding="5" 
                />
           
        </StackLayout>
        <Image Source="unicartagena.png"/>
        <Button 
                x:Name="btnbanner"
                BackgroundColor="Black"
                TextColor="White"
                 FontSize="Small"
                Text="Banner de Publicidad" IsEnabled="True"
                />
    </StackLayout>
</ContentPage>
